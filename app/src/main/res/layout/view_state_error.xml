<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="-90dp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/uikit_error_icon"
            android:src="@drawable/ic_state_error"
            android:scaleType="fitXY"
            android:layout_width="@dimen/state_icon_size"
            android:layout_height="@dimen/state_icon_size" />

        <TextView
            android:id="@+id/uikit_sub_error_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:text="出错啦，点击刷新"
            android:textColor="#FF919499"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/uikit_error_button"
            android:layout_width="128dp"
            android:layout_height="32dp"
            android:layout_marginTop="16dp"
            android:textColor="@color/colorAccent"
            android:gravity="center"
            android:textSize="12dp"
            android:text="刷新"
            tools:visibility="gone"
            android:visibility="gone"
            tools:ignore="MissingPrefix" />

    </LinearLayout>


</LinearLayout>